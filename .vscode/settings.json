{
	"colorMyText.configurations": [
		{
			"paths": ["*.html", "*.mjml", "*.md"],
			"rules": [
				{
					"patterns": ["\\{\\{ [^}]+\\}\\}"],
					"color": "BrightGreen"
				},
				{
					"patterns": [
						"<repeat[^>]*>",
						"</repeat>",
						"<if[^>]*>",
						"</if>",
						"<file[^>]*>",
						"</file>",
						"<switch[^>]*>",
						"</switch>"
					],
					"color": "Magenta"
				},
				{
					"patterns": [
						"<case[^>]*>",
						"</case>",
						"<default[^>]*>",
						"</default>",
						"<else[^>]*>",
						"</else>",
						"<elseif[^>]*>",
						"</elseif>"
					],
					"color": "Green"
				}
			]
		},
		{
			"paths": ["*.pages"],
			"rules": [
				{
					"patterns": [
						// everything after # is a comment
						"#.*"
					],
					"color": "Green"
				}
			]
		}
	],
	"liveServer.settings.port": 5501,
	"json.schemas": [
		{
			"fileMatch": ["config.json", "config.example.json", "config.docker.json"],
			"url": "./config/config.schema.json"
		}
	],
	"files.associations": {
		"config.json": "jsonc",
		"config.*.json": "jsonc"
	},
	"excalidraw.theme": "dark"
}
